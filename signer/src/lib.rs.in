extern crate parity_dapps;

use std::collections::HashMap;
use parity_dapps::{WebApp, File, Info};

#[derive(WebAppFiles)]
#[webapp(path = "./web")]
struct SignerApp {
	files: HashMap<&'static str, File>,
}

impl Default for SignerApp {
	fn default() -> Self {
		let mut files = Self::files();
		files.insert("/styles.css", File {
			path: "/styles.css",
			content: include_bytes!("../../home/src/web/styles.css"),
			content_type: "text/css",
		});

		SignerApp {
			files: files
		}
	}
}

impl WebApp for SignerApp {
	fn file(&self, path: &str) -> Option<&File> {
		self.files.get(path)
	}

	fn info(&self) -> Info {
		Info {
			name: "Parity Trusted Signer",
			version: env!("CARGO_PKG_VERSION"),
			author: "Ethcore <admin@ethcore.io>",
			description: "Confirm transactions issued by other Dapps.",
			icon_url: "icon.png",
		}
	}
}

#[test]
fn test_js() {
	::parity_dapps::js::test(concat!(env!("CARGO_MANIFEST_DIR"), "/web"))
}

